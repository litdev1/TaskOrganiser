<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskOrganiser" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorSecondary">@color/secondaryDark</item>
        <item name="actionOverflowMenuStyle">@color/secondaryDark</item>
    </style>

    <style name="Theme.TaskOrganiser" parent="Base.Theme.TaskOrganiser">
        <item name="android:itemBackground">@color/primaryDark</item>
    </style>

    <style name="CheckBoxStyle" parent="Theme.TaskOrganiser">
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorAccent">@color/primaryLight</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.Material3.Dark.Dialog">
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorAccent">@color/primaryLight</item>
    </style>
</resources>