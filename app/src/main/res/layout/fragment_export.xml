<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonExport"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Export tasks to Download"
            android:importantForAccessibility="no"
            android:textColor="?android:attr/textColorPrimary"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/buttonImport"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Import tasks from Download"
            android:importantForAccessibility="no"
            android:textColor="?android:attr/textColorPrimary"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/buttonAppend"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Append tasks from Download"
            android:importantForAccessibility="no"
            android:textColor="?android:attr/textColorPrimary"
            app:cornerRadius="10dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/buttonResetHelp"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Reset advisory messages"
            android:importantForAccessibility="no"
            android:textColor="?android:attr/textColorPrimary"
            app:cornerRadius="10dp" />

    </LinearLayout>

</FrameLayout>